{
  "name": "@charlietango/hooks",
  "version": "0.1.1",
  "author": "Charlie Tango",
  "description": "Collection of React Hooks",
  "private": false,
  "sideEffects": false,
  "main": "lib/index.js",
  "module": "lib/esm/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/charlie-tango/hooks.git"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "hooks"
  ],
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "eslintIgnore": [
    "*.snap",
    "dist/**",
    "lib/**",
    "example/**"
  ],
  "scripts": {
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "build": "rm -rf lib && run-s build:ts build:ts-modules ",
    "build:ts": "tsc -p tsconfig.cjs.json",
    "build:ts-modules": "tsc -p tsconfig.esm.json",
    "build:storybook": "build-storybook --output-dir example -s .storybook/public",
    "dev": "concurrently -k -r 'jest --watch' 'yarn run storybook'",
    "lint": "eslint . --ext js,ts,tsx",
    "preversion": "yarn build",
    "pretty": "prettier '**/*.{js,ts,tsx,md,json,yml,html}' --write",
    "storybook": "start-storybook -p 9000 -s .storybook/public",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{ts,tsx}": [
      "eslint",
      "jest --findRelatedTests"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "no-unused-vars": 0
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "react-testing-library/cleanup-after-each",
      "jest-dom/extend-expect"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "jest-setup.js"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "invariant": "^2.0.0"
  },
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0 || ^17.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@storybook/addon-actions": "^4.1.4",
    "@storybook/addon-options": "^4.1.4",
    "@storybook/components": "^4.1.11",
    "@storybook/react": "^4.1.4",
    "@types/jest": "^24.0.4",
    "@types/react": "^16.8.2",
    "@types/storybook-readme": "^4.0.0",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__react": "^4.0.0",
    "@types/styled-components": "^4.1.10",
    "@typescript-eslint/eslint-plugin": "^1.1.1",
    "@typescript-eslint/parser": "^1.1.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "^24.0.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-macros": "^2.5.0",
    "concurrently": "4.1.0",
    "coveralls": "^3.0.2",
    "error-overlay-webpack-plugin": "^0.1.6",
    "eslint": "5.x",
    "eslint-config-react-app": "^3.0.7",
    "eslint-plugin-flowtype": "^3.2.1",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "github-markdown-css": "^3.0.1",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "jest-dom": "^3.1.1",
    "lint-staged": "^8.1.1",
    "npm-run-all": "^4.1.5",
    "paths.macro": "^2.0.2",
    "prettier": "^1.16.2",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-markdown": "^4.0.6",
    "react-syntax-highlighter": "^10.1.3",
    "react-test-renderer": "^16.8.0",
    "react-testing-library": "^5.7.0",
    "styled-components": "^4.1.3",
    "typescript": "^3.2.4",
    "typescript-eslint-parser": "^22.0.0"
  }
}
