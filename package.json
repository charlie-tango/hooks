{
  "name": "hooks",
  "description": "Collection of React Hooks",
  "private": true,
  "files": [
    "lib/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/charlie-tango/hooks.git"
  },
  "scripts": {
    "clean": "lerna clean",
    "build": "lerna run build --stream",
    "build:storybook": "lerna run build:storybook --scope @charlietango/storybook",
    "dev": "lerna run dev --scope @charlietango/storybook",
    "lint": "lerna run lint --stream --parallel",
    "new-hook": "node tools/new-hook",
    "update-readme": "node tools/update-readme",
    "release": "cross-env HUSKY_BYPASS=true lerna publish",
    "pretty": "prettier '**/*.{js,ts,tsx,md,json,yml,html}' --write",
    "test": "lerna run test --stream --parallel"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc && lint-staged",
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "packages/*/package.json": [
      "yarn update-readme",
      "git add README.md",
      "git add packages/hooks/readme.md"
    ],
    "README.md": [
      "yarn update-readme",
      "git add README.md",
      "git add packages/hooks/readme.md"
    ],
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx}": [
      "eslint",
      "jest --findRelatedTests"
    ]
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react-hooks"
    ],
    "rules": {
      "@typescript-eslint/no-angle-bracket-type-assertion": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "no-unused-vars": "off",
      "no-console": "error"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0 || ^17.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@qiwi/multi-semantic-release": "^3.8.3",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^11.0.4",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^26.0.14",
    "@types/react": "^16.9.15",
    "@types/styled-components": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "ansi-colors": "^4.0.1",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.0.5",
    "cross-env": "^7.0.0",
    "eslint": "^7.2.0",
    "eslint-config-react-app": "^5.1.0",
    "eslint-plugin-flowtype": "^5.1.3",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "execa": "^4.0.0",
    "globby": "^11.0.0",
    "husky": "^4.2.3",
    "inquirer": "^7.0.0",
    "jest": "^26.0.1",
    "lerna": "^3.19.0",
    "lint-staged": "^10.0.7",
    "lodash": "^4.17.11",
    "mkdirp": "^1.0.3",
    "ora": "^5.1.0",
    "prettier": "^2.0.5",
    "react-test-renderer": "^16.12.0",
    "rollup": "^1.27.8",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-node-resolve": "^5.1.0",
    "typescript": "^4.0.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
