{
  "description": "Collection of React Hooks",
  "private": true,
  "files": ["lib/*"],
  "repository": {
    "type": "git",
    "url": "https://github.com/charlie-tango/hooks.git"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter @charlietango/storybook dev",
    "lint": "biome check . --fix",
    "new-hook": "node tools/new-hook",
    "update-readme": "node tools/update-readme",
    "ci:publish": "pnpm publish -r",
    "test": "vitest",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/*/package.json": [
      "pnpm update-readme",
      "git add README.md",
      "git add packages/hooks/readme.md"
    ],
    "README.md": [
      "pnpm update-readme",
      "git add README.md",
      "git add packages/hooks/readme.md"
    ],
    "*.{js,json,css,md,mdx,ts,tsx}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@testing-library/dom": "^10.3.1",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.3",
    "ansi-colors": "^4.0.1",
    "cross-env": "^7.0.0",
    "execa": "^6.1.0",
    "globby": "^11.0.4",
    "happy-dom": "^14.12.3",
    "husky": "^9.0.11",
    "inquirer": "^8.2.2",
    "lint-staged": "^12.3.7",
    "lodash": "^4.17.11",
    "mkdirp": "^1.0.3",
    "ora": "^6.1.0",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3",
    "vitest": "^1.6.0"
  },
  "packageManager": "pnpm@9.4.0+sha256.b6fd0bfda555e7e584ad7e56b30c68b01d5a04f9ee93989f4b93ca8473c49c74"
}
