{
  "description": "Collection of React Hooks",
  "private": true,
  "files": [
    "lib/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/charlie-tango/hooks.git"
  },
  "scripts": {
    "clean": "lerna clean",
    "build": "lerna run build --stream",
    "build:storybook": "lerna run build:storybook --scope @charlietango/storybook",
    "dev": "lerna run dev --scope @charlietango/storybook",
    "lint": "lerna run lint --stream --parallel",
    "new-hook": "node tools/new-hook",
    "update-readme": "node tools/update-readme",
    "release": "cross-env HUSKY_BYPASS=true lerna publish",
    "pretty": "prettier '**/*.{js,ts,tsx,md,json,yml,html}' --write",
    "test": "lerna run test --stream --parallel"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc && lint-staged",
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "packages/*/package.json": [
      "yarn update-readme",
      "git add README.md"
    ],
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{ts,tsx}": [
      "eslint",
      "jest --findRelatedTests"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "no-unused-vars": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "dependencies": {
    "react": "^16.8.4",
    "react-dom": "^16.8.4"
  },
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0 || ^17.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/jest": "^24.0.11",
    "@types/react": "^16.8.7",
    "@types/styled-components": "^4.1.12",
    "@typescript-eslint/eslint-plugin": "^1.4.1",
    "@typescript-eslint/parser": "^1.4.1",
    "ansi-colors": "^3.2.3",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.3.1",
    "babel-loader": "^8.0.5",
    "cross-env": "^5.2.0",
    "eslint": "^5.15.3",
    "eslint-config-react-app": "^3.0.8",
    "eslint-plugin-flowtype": "^3.2.1",
    "eslint-plugin-import": "2.17.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.5.0",
    "execa": "^1.0.0",
    "globby": "^9.0.0",
    "husky": "^1.3.1",
    "inquirer": "^6.2.2",
    "jest": "^24.3.1",
    "jest-dom": "^3.1.1",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.1",
    "lodash": "^4.17.11",
    "mkdirp": "^0.5.1",
    "ora": "^3.1.0",
    "prettier": "^1.16.2",
    "react-hooks-testing-library": "^0.3.4",
    "react-testing-library": "^6.0.0",
    "rollup": "^1.6.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.0.1",
    "typescript": "^3.3.3333",
    "typescript-eslint-parser": "^22.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
