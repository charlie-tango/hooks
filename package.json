{
  "description": "Collection of React Hooks",
  "private": true,
  "files": [
    "lib/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/charlie-tango/hooks.git"
  },
  "scripts": {
    "clean": "lerna clean",
    "build": "lerna run build --stream --parallel",
    "lint": "lerna run lint --stream --parallel",
    "new-hook": "node tools/new-hook",
    "pretty": "prettier '**/*.{js,ts,tsx,md,json,yml,html}' --write",
    "test": "lerna run test --stream --parallel"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{ts,tsx}": [
      "eslint",
      "jest --findRelatedTests"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "dependencies": {
    "invariant": "^2.0.0",
    "json2mq": "^0.2.0",
    "react": "^16.8.3",
    "react-dom": "^16.8.3"
  },
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0 || ^17.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^24.0.4",
    "@types/react": "^16.8.2",
    "@typescript-eslint/eslint-plugin": "^1.1.1",
    "@typescript-eslint/parser": "^1.1.1",
    "ansi-colors": "^3.2.3",
    "babel-eslint": "10.0.1",
    "babel-jest": "^24.0.0",
    "babel-loader": "^8.0.5",
    "eslint": "5.x",
    "eslint-config-react-app": "^3.0.7",
    "eslint-plugin-flowtype": "^3.2.1",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "execa": "^1.0.0",
    "globby": "^9.0.0",
    "husky": "^1.3.1",
    "inquirer": "^6.2.2",
    "jest": "^24.0.0",
    "jest-dom": "^3.1.1",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.1",
    "lodash": "^4.17.11",
    "mkdirp": "^0.5.1",
    "ora": "^3.1.0",
    "prettier": "^1.16.2",
    "react-testing-library": "^5.7.0",
    "rollup": "^1.2.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.0.1",
    "typescript": "^3.2.4",
    "typescript-eslint-parser": "^22.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
