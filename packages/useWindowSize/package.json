{
  "name": "@charlietango/use-window-size",
  "description": "Get the width and height of the viewport",
  "version": "1.7.0",
  "private": false,
  "sideEffects": false,
  "type": "commonjs",
  "main": "./lib/useWindowSize.js",
  "module": "./lib/useWindowSize.mjs",
  "types": "./lib/useWindowSize.d.ts",
  "exports": {
    ".": {
      "types": "./lib/useWindowSize.d.mts",
      "require": "./lib/useWindowSize.js",
      "default": "./lib/useWindowSize.mjs"
    }
  },
  "license": "MIT",
  "keywords": ["react", "hooks"],
  "files": ["lib/*"],
  "repository": {
    "type": "git",
    "url": "https://github.com/charlie-tango/hooks.git"
  },
  "scripts": {
    "lint": "biome check . --fix",
    "prebuild": "rm -rf lib",
    "build": "tsup src/useWindowSize.ts",
    "prepublish": "pnpm build",
    "test": "vitest"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "tsup": "^8.1.0"
  }
}
