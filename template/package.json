{
  "name": "%packageName%",
  "description": "%description%",
  "version": "%version%",
  "private": false,
  "sideEffects": false,
  "type": "commonjs",
  "main": "./lib/%name%.js",
  "module": "./lib/%name%.mjs",
  "types": "./lib/%name%.d.ts",
  "exports": {
    ".": {
      "types": "./lib/%name%.d.mts",
      "require": "./lib/%name%.js",
      "default": "./lib/%name%.mjs"
    }
  },
  "license": "MIT",
  "keywords": ["react", "hooks"],
  "files": ["lib/*"],
  "repository": {
    "type": "git",
    "url": "https://github.com/charlie-tango/hooks.git"
  },
  "scripts": {
    "lint": "biome check . --fix",
    "prebuild": "rm -rf lib",
    "build": "tsup src/%name%.ts",
    "prepublish": "pnpm build",
    "test": "vitest"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "tsup": "^8.1.0"
  }
}
